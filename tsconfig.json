{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "types": ["node", "fastify","typescript"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }